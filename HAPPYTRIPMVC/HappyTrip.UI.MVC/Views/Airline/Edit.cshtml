@model HappyTrip.Models.Airline

@{
    ViewBag.Title = "Edit";
}

<p>@ViewBag.Message</p>

@using (Html.BeginForm("Edit", "Airline", FormMethod.Post, new { enctype = "multipart/form-data"  }))
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Edit Airline</legend>

        @Html.HiddenFor(model => model.AirlineId)

        <div class="editor-label">
            @Html.LabelFor(model => model.AirlineName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.AirlineName)
            @Html.ValidationMessageFor(model => model.AirlineName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Code)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Code)
            @Html.ValidationMessageFor(model => model.Code)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Logo)
        </div>
        <div class="editor-field">
            <img src="~/@Model.Logo" alt="@Model.AirlineName" height="60px" width="100px" />
            <br />
            <br />
            <B>Upload New : </B> 
            <input type="file" name="file" id= "@Model.Logo" />

            @*@Html.EditorFor(model => model.Logo)
            @Html.ValidationMessageFor(model => model.Logo)*@
            <input type="hidden" name="Logo" value="@Model.Logo" id="Logo"/>
        </div>
        <br />
        <br />
        <p>
            <input type="submit" value="Save" class="button-secondary"/>
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
